<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="GestionAdministrative.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:GestionAdministrative.Views"
    Title="GestionAdministrative">

    <TabBar>
        <ShellContent
            Title="Dashboard"
            Icon="home.png"
            ContentTemplate="{DataTemplate views:DashboardPage}"
            Route="dashboard" />

        <ShellContent
            Title="Clients"
            Icon="person.png"
            ContentTemplate="{DataTemplate views:ClientsPage}"
            Route="clients" />

        <ShellContent
            Title="Devis"
            Icon="document.png"
            ContentTemplate="{DataTemplate views:DevisListPage}"
            Route="devis" />

        <ShellContent
            Title="Factures"
            Icon="invoice.png"
            ContentTemplate="{DataTemplate views:FacturesListPage}"
            Route="factures" />
    </TabBar>

</Shell>
